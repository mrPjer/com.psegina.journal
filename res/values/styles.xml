<?xml version="1.0" encoding="utf-8"?>
<!-- 
	Various styles are defined here
 -->
<resources>
	<!-- Defines the default chromatic style of the application -->
	<style name="journalColor">
		<item name="android:background">#2a2a2a</item>
	</style>
	<style name="defaultRootLinearLayoutStyle" parent="@style/journalColor">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:orientation">vertical</item>
	</style>
	<style name="divider" parent="@android:attr/listSeparatorTextViewStyle">
	</style>
	
	<!-- Styles for the content holders in com.psegina.journal.gui.About -->
	<style name="about_root" parent="journalColor">
	  	<item name="android:layout_width">wrap_content</item>
  		<item name="android:layout_height">wrap_content</item>
 	</style>
	
	<style name="about_label" parent="about_root">
			<item name="android:gravity">left|bottom</item>
			<item name="android:textStyle">bold</item>
			<item name="android:textSize">12dp</item>
	</style>
	
	<style name="about_value" parent="about_root">
			<item name="android:layout_weight">1</item>
			<item name="android:gravity">right</item>
			<item name="android:textSize">18dp</item>
			<item name="android:autoLink">web|email</item>
			<item name="android:textColorLink">#c6c6c6</item>
	</style>
	
</resources>
